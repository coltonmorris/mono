{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "target": "es5",
    "lib": [
      "es2015",
      "es6",
      "dom",
      "es5"
    ],
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "paths": {
        "mono/*": [
          "*"
        ]
    }
  },
  "include": [
    "projects/grpc-web/frontend/src/**/*.ts*",
    "projects/spotify-visualizer/**/*.ts*"
  ]
}
